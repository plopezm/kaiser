{
    "version": "1",
    "name": "stringifyJson",
    "args": [
        {
            "name": "me",
            "value": {
                "name": "Pablo Lopez Martinez"
            }
        },
        {
            "name": "timeToWait",
            "value": 10
        }
    ],
    "duration": "PT30S",
    "start": "printHello",
    "tasks": {
        "printHello": {
            "script": "logger.info('Hello me '+ me);logger.info('Hello stringify ' + JSON.stringify(me));",
            "onSuccess": "looseTime",
            "onFailure": "sayError"
        },
        "looseTime": {
            "script": "logger.info('going to sleep '+timeToWait+' seconds');system.sleep(10, 'S');logger.info('Wake up');",
            "onSucess": "sayGoodbye",
            "onFailure": "sayError"
        },
        "sayGoodbye": {
            "script": "logger.info('bye bye')"
        },
        "sayError": {
            "script": "logger.info('bye bye with error')"
        }
    }
}